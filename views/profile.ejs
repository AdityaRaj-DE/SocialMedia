<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="bg-[#f3f3f3]">
    <nav>
      <a class="px-4 py-3 text-lg text-[#0a3f55]" href="/">Home</a>
      <a class="px-4 py-3 text-lg text-[#0a3f55]" href="/logout">Logout</a>
    </nav>
    <div class="w-full min-h-screen p-10">
      <h3 class="text-3xl text-[#0a3f55] m-5">Hello, <%= user.name %></h3>
      <h5 class="mb-5 text-[#0a3f55]">you can create a new post</h5>
      <form action="/post" method="post">
        <textarea
          name="content"
          placeholder="what's on your mind"
          class="w-1/3 text-[#0a3f55] p-3 outline-none resize-none bg-transparent border-2 border-zinc-800 rounded-md"
        ></textarea>
        <input
          type="submit"
          name=""
          id=""
          class="px-3 py-2 text-[#0a3f55] font-bold shadow-md bg-white block rounded-md mt-2 w-40"
          value="create new post"
        />
      </form>
      <div class="posts mt-20">
        <h3 class="text-zinc-400">Your post</h3>
        <div class="postcontainer mt-5">
          <% user.posts.reverse().forEach(function(post){ %>
          <div
            class="post w-1/3 p-4 mb-2 rounded-md bg-white shadow-lg text-[#0a3f55]"
          >
            <h4 class="text-blue-500 mb-2">@<%= user.username %></h4>
            <p class="text-sm tracking-tight"><%= post.content %></p>
            <small class="mt-4 inline-block"><%= post.likes.length %></small>
            <div class="btns flex gap-4 mt-5">
              <a href="/like/<%= post._id %>" class="text-blue-500">
                <%= post.likes.indexOf(user._id) === -1 ?"Like": "Unlike" %>
              </a>
              <a href="/edit/<%= post._id %>" class="text-blue-500">Edit</a>
              <a href="/delete/<%= post._id %>" class="text-red-500">delete</a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
