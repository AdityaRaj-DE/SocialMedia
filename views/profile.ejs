<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SocialMedia</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="bg-white">
    <nav class="flex flex-row justify-center gap-2">
      <a class="px-4 py-3 text-lg text-[#101010] font-medium" href="/home">Home</a>
      <a class="px-4 py-3 text-lg text-[#101010] font-medium" href="/logout"
        >Logout</a
      >
    </nav>
    <div class="w-full min-h-screen p-10">
      <div class="flex flex-row w-full gap-4">
        <div class="h-32 w-32 m-2 items-center justify-center flex gap-2 flex-col">
          <img
            class="w-full h-full rounded-full object-cover"
            src="/images/uploads/<%= user.profilepic %>"
            alt=""
          />
          <a href="/profile/upload" class="border-2 border-[#101010] text-[#101010] px-4 py-2 text-xs font-medium rounded-xl">Edit Profile</a>
        </div>
        <div>
          <h3 class="text-5xl text-[#101010] m-5 font-medium">
            Hello, <%= user.name %>
          </h3>
          <div class="flex my-1 mx-6 gap-2">
            <h1 class="text-[#101010] font-medium">Total Posts:</h1>
            <h1 class="text-[#101010] font-semibold">
              <%= user.posts.length %>
            </h1>
          </div>
        </div>
        
      </div>
      <div class="flex justify-center">
        <a
          href="/createpost"
          class="m-2 bg-[#101010] px-8 py-2 text-center text-white font-medium rounded-xl"
          >Create New Post</a
        >
      </div>
      <div class="posts mt-8 flex flex-col justify-center items-center">
        <h3 class="text-zinc-700 m-2 text-2xl font-medium text-center">Your post</h3>
        <div class="h-0.5 w-11/12 m-2 bg-zinc-700"></div>
        <div class="postcontainer mt-5 columns-1 sm:columns-2 md:columns-3 lg:columns-4 gap-4 space-y-4 w-full">
          <% user.posts.reverse().forEach(function(post){ %>
          <div
            class="break-inside-avoid p-1 bg-[#f7f7f7] rounded-2xl w-full"
          >
            <% if (post.photo && post.photo.data) { %>
            <img
              src="/post/image/<%= post._id %>"
              alt="Post Image"
              class="h-full w-full object-cover rounded-xl"
            />
            <% } %>
            <p class="text-sm py-2 px-2 tracking-tight"><%= post.content %></p>
            <div class="flex justify-between w-full gap-1">
        
                <a href="/edit/<%= post._id %>" class="text-[#101010] px-4 py-2 w-full border-2 rounded-xl border-[#101010] text-center font-bold">Edit</a>
                <a href="/delete/<%= post._id %>" class="text-white px-4 py-2 w-full bg-[#101010] rounded-xl border-[#101010] border-2 text-center font-bold"
                  >Delete</a
                >
              
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
