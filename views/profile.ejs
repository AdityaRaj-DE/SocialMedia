<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="bg-[#f3f3f3]">
    <nav class="flex flex-row justify-center gap-2">
      <a class="px-4 py-3 text-lg text-[#101010] font-medium" href="/">Home</a>
      <a class="px-4 py-3 text-lg text-[#101010] font-medium" href="/logout"
        >Logout</a
      >
    </nav>
    <div class="w-full min-h-screen p-10">
      <div class="flex flex-row w-full gap-4">
        <div class="h-32 w-32 m-2 items-center justify-center flex">
          <img
            class="w-full h-full rounded-full object-cover"
            src="/images/uploads/<%= user.profilepic %>"
            alt=""
          />
        </div>
        <div>
          <h3 class="text-5xl text-[#101010] m-5 font-medium">
            Hello, <%= user.name %>
          </h3>
          <div class="flex my-1 mx-6 gap-2">
            <h1 class="text-[#101010] font-medium">Total Posts:</h1>
            <h1 class="text-[#101010] font-semibold">
              <%= user.posts.length %>
            </h1>
          </div>
        </div>
        
      </div>
      <div class="flex justify-center">
        <a
          href="/createpost"
          class="m-2 bg-[#101010] px-8 py-2 text-center text-white font-medium rounded-full"
          >Create New Post</a
        >
      </div>
      <div class="posts mt-8 flex flex-col justify-center items-center">
        <h3 class="text-zinc-700 m-2 text-2xl font-medium text-center">Your post</h3>
        <div class="h-0.5 w-11/12 m-2 bg-zinc-700"></div>
        <div class="postcontainer mt-5 flex flex-wrap gap-2">
          <% user.posts.reverse().forEach(function(post){ %>
          <div
            class="post w-72 p-4 mb-2 flex flex-col justify-between rounded-md bg-white shadow-lg text-[#0a3f55]"
          >
            <% if (post.photo && post.photo.data) { %>
            <img
              src="/post/image/<%= post._id %>"
              alt="Post Image"
              class="max-h-60 w-full object-cover mb-2 rounded-lg"
            />
            <% } %>
            <p class="text-sm py-2 px-4 tracking-tight"><%= post.content %></p>
            <div class="flex justify-between">
              <div class="btns flex gap-4 mt-5">
                <a href="/edit/<%= post._id %>" class="text-blue-500">Edit</a>
                <a href="/delete/<%= post._id %>" class="text-red-500"
                  >Delete</a
                >
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
